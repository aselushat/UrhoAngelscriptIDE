<mui:ModernDialog x:Class="Debugger.Dlg.ErrorDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="Error" Height="400" Width="640" ResizeMode="NoResize">
    <mui:ModernDialog.Resources>
        <SolidColorBrush Color="Red" x:Key="Accent"/>
        <SolidColorBrush Color="Red" x:Key="BorderBrush" />
        <SolidColorBrush Color="Red" x:Key="WindowBorderActive" />
        <SolidColorBrush Color="Red" x:Key="WindowBorderBackground" />
    </mui:ModernDialog.Resources>
    <Grid>
        <DockPanel Margin="10,10,9.667,10">
            <StackPanel DockPanel.Dock="Bottom">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Report to URL" Margin="10.10"/>
                    <TextBox Name="rptServerURL" Width="400"/>
                </StackPanel>
            </StackPanel>
            <TextBox Name="errorText" Margin="10,10"/>
        </DockPanel>
    </Grid>
</mui:ModernDialog>
