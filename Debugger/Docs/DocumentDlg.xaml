<mui:ModernDialog x:Class="Debugger.Docs.DocumentDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Name="txtDocumenting" Padding="5" FontWeight="Bold"/>
            <Label Content="Documentation:" Padding="5"/>
            <TextBox TextWrapping="Wrap" Name="txtContent" Text="{Binding Text}" MaxWidth="400"/>
        </StackPanel>
    </Grid>
</mui:ModernDialog>
